<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="331.5dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/icon"
        android:layout_margin="10dp"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        />


        <TextView
            android:id="@+id/title_enterprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#1a0e49"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="title"
            android:layout_toRightOf="@+id/icon"/>


        <TextView
            android:id="@+id/enterprise_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#8d8c8c"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="title"
            android:layout_below="@+id/title_enterprise"
            android:layout_toRightOf="@+id/icon"/>

        <TextView
            android:id="@+id/enterprise_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#8d8c8c"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="title"
            android:layout_below="@+id/enterprise_description"
            android:layout_toRightOf="@+id/icon"/>

    </RelativeLayout>

</LinearLayout>